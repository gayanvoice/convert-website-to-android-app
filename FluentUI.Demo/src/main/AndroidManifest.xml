<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gayanvoice.app">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--Launch Screen: We use AppTheme.Launcher for the theme instead of AppTheme in order to load the app with a launch screen-->
        <activity
            android:name="com.gayanvoice.app.MainActivity"
            android:label="@string/app_title"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Demo activities -->
        <activity android:name="com.gayanvoice.app.component.ActionBarLayoutActivity" />
        <activity android:name="com.gayanvoice.app.component.activity.AppBarLayoutActivity" />
        <activity android:name="com.gayanvoice.app.component.activity.AvatarViewActivity" />
        <activity android:name="com.gayanvoice.app.component.activity.AvatarGroupViewActivity" />
        <activity android:name="com.gayanvoice.app.component.BasicInputsActivity" />
        <activity android:name="com.gayanvoice.app.component.activity.BottomNavigationActivity" />
        <activity android:name="com.gayanvoice.app.component.activity.BottomSheetActivity" />
        <activity android:name="com.gayanvoice.app.component.activity.CalendarViewActivity" />
        <activity android:name="com.gayanvoice.app.component.activity.ContextualCommandBarActivity" />
        <activity android:name="com.gayanvoice.app.component.activity.DateTimePickerActivity" />
        <activity android:name="com.gayanvoice.app.component.activity.DrawerActivity" />
        <activity android:name="com.gayanvoice.app.component.activity.ListItemViewActivity" />
        <activity
            android:name="com.gayanvoice.app.component.activity.PeoplePickerViewActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="com.gayanvoice.app.component.activity.PersistentBottomSheetActivity" />
        <activity android:name="com.gayanvoice.app.component.activity.PersonaChipViewActivity" />
        <activity android:name="com.gayanvoice.app.component.activity.PersonaListViewActivity" />
        <activity android:name="com.gayanvoice.app.component.activity.PersonaViewActivity" />
        <activity android:name="com.gayanvoice.app.component.activity.PopupMenuActivity" />
        <activity android:name="com.gayanvoice.app.component.activity.ProgressActivity" />
        <activity android:name="com.gayanvoice.app.component.activity.SnackbarActivity" />
        <activity android:name="com.gayanvoice.app.component.activity.TabLayoutActivity" />
        <activity android:name="com.gayanvoice.app.component.activity.TemplateViewActivity" />
        <activity android:name="com.gayanvoice.app.component.activity.TooltipActivity" />
        <activity android:name="com.gayanvoice.app.component.activity.TypographyActivity" />
        <activity android:name="com.gayanvoice.app.component.actionbar.ActionBarDemoActivity"/>

    </application>

</manifest>